---
interface Props {
    url: string;
    image: string;
    title: string;
    body: string;
}

const { url, image, title, body } = Astro.props;
import { Image } from 'astro:assets';
---

<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
          <Image src={image} alt="Ciao!" width={350} height={184} loading="lazy" class="card__img" />
        </div>
        <h3 class="card__title">
            {title}
        </h3>
        <p class="card__txt">
            {body}
        </p>
    </a>
</li>
