---
import { Swiper, SwiperWrapper, SwiperSlide, SwiperButtonPrev, SwiperButtonNext } from "astro-swiper";

const { images = [] } = Astro.props;
const thumbnails = images.map((item) => item.thumbnail ?? item.src);
---

<Swiper
  uniqueClass="myswiper-main"
  linkToThumbUniqueClass="myswiper-thumbnail"
  options={{
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    loop: true,
    autoplay: {
      delay: 10000,
      disableOnInteraction: false,
      waitForTransition: false,
    },
  }}
>
  <SwiperWrapper>
    {
      images.map((image, idx) => (
        <SwiperSlide>
          <img src={image.src ?? image} alt={image.alt ?? ""} loading="lazy" />
        </SwiperSlide>
      ))
    }
  </SwiperWrapper>
  <SwiperButtonPrev />
  <SwiperButtonNext />
</Swiper>

<Swiper
  uniqueClass="myswiper-thumbnail"
  options={{
    spaceBetween: 10,
    slidesPerView: 4,
    freeMode: true,
    watchSlidesProgress: true,
    loop: true,
  }}
>
  <SwiperWrapper>
    {
      thumbnails.map((thumb, idx) => (
        <SwiperSlide>
          <img src={thumb} alt="" loading="lazy" />
        </SwiperSlide>
      ))
    }
  </SwiperWrapper>
</Swiper>
