---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import {Gallery} from '../components/Gallery';
const allProjects = await getCollection("projects");
const pageTitle = "Works";
import { data } from "../content/data"
---
<Layout pageTitle={pageTitle}>
    <h2 class="white-line">Works</h2>
    <br>
    <h2>Code projects:</h2>
    <ul role="list" class="link-card-grid">
        {allProjects.map((card) => <Card 
            url={`/projects/${card.slug}/`} 
            image={card.data.image.url} 
            title={card.data.title} 
        />)}
    </ul>
    <h2>Art projects</h2>
    <Gallery images={data.Works.Arts} client:load/>
    <Gallery images={data.Works.Emote} client:load/>
    <h2>Cosplay projects:</h2>

</Layout>

